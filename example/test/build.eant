<?xml version="1.0"?>

<project name="test" default="help">

	<description>
		description: "Eiffel Ant file for Gobo Eiffel Test Library examples"
		author:      "Eric Bezault [ericb@gobosoft.com]"
		copyright:   "Copyright (c) 2001, Eric Bezault and others"
		license:     "Eiffel Forum Freeware License v1 (see forum.txt)"
		date:        "$Date$"
		revision:    "$Revision$"
	</description>

	<target name="help">
		<echo message="usage:"/>
		<echo message="   geant install"/>
		<echo message="   geant clean"/>
		<echo message="   geant clobber"/>
	</target>

	<target name="install" depend="init" dir="${GOBO}/example/test">
		<description>
			Install the Gobo Eiffel Test Library examples.
		</description>

		<geant file="concat1/build.eant" target="install"/>
		<geant file="concat2/build.eant" target="install"/>
	</target>

	<target name="clean" depend="init" dir="${GOBO}/example/test">
		<description>
			Remove intermediary generated files.
		</description>

		<geant file="concat1/build.eant" target="clean"/>
		<geant file="concat2/build.eant" target="clean"/>
	</target>

	<target name="clobber" depend="init" dir="${GOBO}/example/test">
		<description>
			Remove all generated files.
		</description>

		<geant file="concat1/build.eant" target="clobber"/>
		<geant file="concat2/build.eant" target="clobber"/>
	</target>


<!-- Implementation -->

	<target name="init">
		<!-- do nothing -->
	</target>

</project>
