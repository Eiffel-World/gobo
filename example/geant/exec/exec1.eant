<?xml version="1.0" ?>

<project name="multiple commands" default="ls" basedir="." >
	<target name="windows" if="env.windir" >
		<var name="copy" value="copy" />
		<var name="del" value="del" />
		<var name="dir" value="dir" />
		<var name="cmdsep" value="&&" />
		<var name="pathsep" value="\" />
	</target>

	<target name="unix" unless="env.windir" >
		<var name="cp" value="cp" />
		<var name="del" value="rm" />
		<var name="dir" value="ls -l" />
		<var name="cmdsep" value=";" />
		<var name="pathsep" value="/" />
	</target>

	<target name="init" depends="windows,unix" >
	</target>

	<target name="ls" description="print content of current directory" depends="init">
		<var name="from_dir" value="exec" />
		<var name="to_dir" value=".." />
		<exec executable="cd ${to_dir} ${cmdsep} ${dir} ${cmdsep} cd ${from_dir} ${cmdsep} ${dir}" />
	</target>
	
</project>
