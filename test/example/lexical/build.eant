<?xml version="1.0"?>

<project name="lexical" inherit="${GOBO}/misc/test.eant" default="help">

	<description>
		system: "Gobo Eiffel Lexical Examples Tester"
		copyright: "Copyright (c) 2001, Eric Bezault and others"
		license: "Eiffel Forum License v1 (see forum.txt)"
		date: "$Date$"
		revision: "$Revision$"
	</description>


<!-- Implementation -->

	<target name="other_clean" depend="init">
		<description>
			Remove other intermediary generated files.
		</description>

		<delete directory="Tascii2ps"/>
		<delete directory="Tcalculator"/>
		<delete directory="Teiffel_scanner"/>
		<delete directory="Tgegrep"/>
	</target>

	<target name="init_system">
		<set name="system" value="xlexical"/>
		<set name="library" value="lexical"/>
		<set name="system_dir" value="${GOBO}/test/example/${library}"/>
	</target>

</project>
