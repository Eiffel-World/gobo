<?xml version="1.0"?>

<system name="xtools">
	<description>
		system: "Gobo Eiffel Tools Library Tester"
		copyright: "Copyright (c) 2002, Eric Bezault and others"
		license: "MIT License"
		date: "$Date$"
		revision: "$Revision$"
	</description>

	<root class="XTOOLS" creation="make"/>
	<option name="console_application" value="true"/>
	<option unless="${DEBUG}">
		<option name="assertion" value="none"/>
		<option name="garbage_collector" value="none"/>
		<option name="finalize" value="true" unless="${GOBO_EIFFEL}=ve"/>
	</option>
	<option if="${DEBUG}">
			<!-- Last too long when compiled with all assertions with Visual Eiffel -->
		<option name="assertion" value="all" unless="${GOBO_EIFFEL}=ve"/>
		<option name="assertion" value="require" if="${GOBO_EIFFEL}=ve"/>
		<option name="garbage_collector" value="internal"/>
			<!-- Generate too big C file with SmartEiffel -->
		<option name="split" value="true" if="${GOBO_EIFFEL}=se"/>
		<option name="finalize" value="false"/>
	</option>
	<option if="${GOBO_DOTNET}">
		<option name="msil_generation" value="true"/>
		<option name="line_generation" value="true"/>
	</option>
	<option if="${GOBO_EIFFEL}=se">
		<option name="warning" value="none"/>
		<option name="case_insensitive" value="false"/>
	</option>

	<cluster name="et_tester_ve" location="." if="${GOBO_EIFFEL}=ve"/>
	<cluster name="et_tester" location="${GOBO}/test/tools"/>
	<cluster name="et_testgen" location="TESTGEN"/>
	<mount location="${GOBO}/library/test/library.xace"/>
	<mount location="${GOBO}/library/tools/library.xace"/>
	<mount location="${GOBO}/library/kernel/library.xace"/>
	<mount location="${GOBO}/library/lexical/library.xace"/>
	<mount location="${GOBO}/library/parse/library.xace"/>
	<mount location="${GOBO}/library/string/library.xace"/>
	<mount location="${GOBO}/library/structure/library.xace"/>
	<mount location="${GOBO}/library/utility/library.xace"/>
	<mount location="${GOBO}/library/pattern/library.xace"/>
	<mount location="${GOBO}/library/xml/library.xace"/>
	<mount location="${GOBO}/library/time/library.xace"/>
	<mount location="${GOBO}/library/math/library.xace"/>
	<mount location="${GOBO}/library/regexp/library.xace"/>
	<mount location="${GOBO}/library/kernel.xace"/>
</system>
