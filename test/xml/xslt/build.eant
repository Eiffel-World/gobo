<?xml version="1.0"?>

<project name="xslt" default="help">

	<description>
		system: "Gobo Eiffel XSLT Library Tester"
		copyright: "Copyright (c) 2004, Colin Adams and others"
		license: "Eiffel Forum License v2 (see forum.txt)"
		date: "$Date$"
		revision: "$Revision$"
	</description>

	<inherit>
		<parent location="${GOBO}/misc/test.eant">
			<redefine target="init_system"/>
			<redefine target="other_clobber"/>
		</parent>
	</inherit>


<!-- Implementation -->

	<target name="init_system">
		<set name="system" value="xslt"/>
		<set name="system_dir" value="${GOBO}/test/xml/xslt"/>
	</target>

	<target name="other_clobber" depend="init">
		<description>
			Remove other generated files.
		</description>

		<delete file="${system_dir}/listing"/>
		<delete directory="${system_dir}/eCluster"/>
		<delete directory="${system_dir}/eProject"/>
	</target>
</project>
