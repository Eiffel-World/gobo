feature -- Constants

	two: MA_DECIMAL is
			-- 2 as a decimal
		once
			create Result.make_from_integer (2)
		ensure
			two_not_void: Result /= Void
		end

	minus_two: MA_DECIMAL is
			-- -2 as a decimal
		once
			create Result.make_from_integer (-2)
		ensure
