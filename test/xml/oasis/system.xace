<system name="xmloasis">
	<root class="XMLOASIS" creation="make"/>
	<cluster>
		<option unless="${DEBUG}">
			<require enable="false"/>
			<ensure enable="false"/>
			<invariant enable="false"/>
			<loop enable="false"/>
			<check enable="false"/>
			<optimize enable="true"/>
		</option>
		<option if="${DEBUG}">
			<require enable="true"/>
			<ensure enable="true"/>
			<invariant enable="true"/>
			<loop enable="true"/>
			<check enable="true"/>
			<optimize enable="false"/>
		</option>

		<cluster name="xmloasis" location="${GOBO}/test/xml/oasis">
			<cluster name="testgen" location="TESTGEN"/>
		</cluster>

		<mount location="${GOBO}/library/test/cluster.xace"/>
		<mount location="${GOBO}/library/kernel/cluster.xace"/>
		<mount location="${GOBO}/library/structure/cluster.xace"/>
		<mount location="${GOBO}/library/utility/cluster.xace"/>
		<mount location="${GOBO}/library/pattern/cluster.xace"/>
		<mount location="${GOBO}/library/parse/cluster.xace"/>
		<mount location="${GOBO}/library/lexical/cluster.xace"/>
		<mount location="${GOBO}/library/xml/cluster.xace"/>
		<mount location="${GOBO}/library/kernel.xace" />
	</cluster>
</system>
