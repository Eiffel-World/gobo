<?xml version="1.0"?>

<project name="formatter" default="help" >

	<description>
		system: "Gobo Eiffel Formatter Library Tester"
		origins: "Based on code from Object Tools."
		copyright: "Copyright (c) 2004, Eric Bezault and others"
		license: "Eiffel Forum License v2 (see forum.txt)"
		date: "$Date$"
		revision: "$Revision$"
	</description>

	<inherit>
		<parent location="${GOBO}/misc/test.eant">
			<redefine target="init_system"/>
		</parent>
	</inherit>


<!-- Implementation -->

	<target name="init_system">
		<set name="system" value="xformatter"/>
		<set name="library" value="formatter"/>
		<set name="system_dir" value="${GOBO}/test/${library}"/>
	</target>

</project>
