<?xml version="1.0"?>

<system name="xformatter">
	<description>
		system: "Formatter tester"
		origins: "Based on code from Object Tools."
		copyright: "Copyright (c) 2004, Eric Bezault and others"
		license: "Eiffel Forum License v2 (see forum.txt)"
		date: "$Date$"
		revision: "$Revision$"
	</description>

	<root class="XFORMATTER" creation="make"/>
	<option unless="${DEBUG}">
		<option name="assertion" value="none"/>
		<option name="garbage_collector" value="none"/>
		<option name="finalize" value="true" unless="${GOBO_EIFFEL}=ve"/>
	</option>
	<option if="${DEBUG}">
		<option name="assertion" value="all"/>
		<option name="garbage_collector" value="internal"/>
		<option name="finalize" value="false"/>
		<option name="debug" value="true"/>
	</option>

	<cluster name="gf_tester" location="${GOBO}/test/formatter"/>
	<cluster name="gf_testgen" location="TESTGEN"/>
	<mount location="${GOBO}/library/test/library.xace"/>
	<mount location="${GOBO}/library/formatter/library.xace"/>
	<mount location="${GOBO}/library/time/library.xace"/>
	<mount location="${GOBO}/library/structure/library.xace"/>
	<mount location="${GOBO}/library/utility/library.xace"/>
	<mount location="${GOBO}/library/pattern/library.xace"/>
	<mount location="${GOBO}/library/kernel/library.xace"/>
<!-- 	<cluster name="ve_support" location="${VE_Lib}/Other/Base/Support" if="${GOBO_EIFFEL}=ve"/> -->
	<mount location="${GOBO}/library/kernel.xace"/>
</system>
