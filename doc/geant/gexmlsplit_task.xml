	<title>gexmlsplit</title>

	<section id="gexmlsplit_description">
		<title>Description</title>
		<para>
			Run gexmlsplit.
		</para>
	</section>

	<section id="gexmlsplit_parameters">
		<title>Parameters</title>

		<variablelist>
			<varlistentry>
				<term>input</term>
				<listitem>
					<para><emphasis>Description: </emphasis>name of xml input file</para>
				</listitem>
				<listitem>
					<para><emphasis>Domain: </emphasis>Valid filename pointing to existing file</para>
				</listitem>
				<listitem>
					<para><emphasis>Default: </emphasis>-</para>
				</listitem>
			</varlistentry>
		</variablelist>
	</section>

	<section id="gexmlsplit_specification">
		<title>RNG Specification</title>

		<programlisting><![CDATA[
  <define name="gexmlsplit">
    <element name="gexmlsplit">
      <ref name="dir_if_unless"/>
      <attribute name="input"/>
    </element>
  </define>
]]>
		</programlisting>
	</section>

	<section id="gexmlsplit_examples">
		<title>Examples</title>

		<programlisting><![CDATA[
  <gexmlsplit input="input.xml"/>
]]>
		</programlisting>
	</section>

