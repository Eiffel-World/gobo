<chapter id="hact_task">
	<title>hact</title>

	<sect1 id="hact_description">
		<title>Description</title>
		<para>
			Invoke Halstenbach’s Eiffel Compiler.
		</para>
	</sect1>

	<sect1 id="hact_parameters">
		<title>Parameters</title>

		<variablelist>
			<varlistentry>
				<term>ace</term>
				<listitem>
					<para><emphasis>Description: </emphasis>Name of ace file</para>
				</listitem>
				<listitem>
					<para><emphasis>Domain: </emphasis>Valid filename pointing to existing file</para>
				</listitem>
				<listitem>
					<para><emphasis>Default: </emphasis>-</para>
				</listitem>
			</varlistentry>
		
			<varlistentry>
				<term>system</term>
				<listitem>
					<para><emphasis>Description: </emphasis>System</para>
				</listitem>
				<listitem>
					<para><emphasis>Domain: </emphasis>-</para>
				</listitem>
				<listitem>
					<para><emphasis>Default: </emphasis>-</para>
				</listitem>
			</varlistentry>
		
			<varlistentry>
				<term>finalize</term>
				<listitem>
					<para><emphasis>Description: </emphasis>finalize</para>
				</listitem>
				<listitem>
					<para><emphasis>Domain: </emphasis>Boolean (true|false)</para>
				</listitem>
				<listitem>
					<para><emphasis>Default: </emphasis>false</para>
				</listitem>
			</varlistentry>
		
			<varlistentry>
				<term>fish</term>
				<listitem>
					<para><emphasis>Description: </emphasis>fish</para>
				</listitem>
				<listitem>
					<para><emphasis>Domain: </emphasis>Boolean (true|false)</para>
				</listitem>
				<listitem>
					<para><emphasis>Default: </emphasis>false</para>
				</listitem>
			</varlistentry>
		
			<varlistentry>
				<term>clean</term>
				<listitem>
					<para><emphasis>Description: </emphasis>clean</para>
				</listitem>
				<listitem>
					<para><emphasis>Domain: </emphasis>Boolean (true|false)</para>
				</listitem>
				<listitem>
					<para><emphasis>Default: </emphasis>false</para>
				</listitem>
			</varlistentry>
		
		</variablelist>
	</sect1>
	
	<sect1 id="hact_specification">
		<title>RNG Specification</title>
		
		<programlisting><![CDATA[
  <define name="hact">
    <element name="hact">
      <ref name="dir_if_unless"/>
      <choice>
        <group>
          <attribute name="system"/>
          <optional>
            <attribute name="ace"/>
          </optional>
          <optional>
            <attribute name="finalize"/>
          </optional>
          <optional>
            <attribute name="fish"/>
          </optional>
        </group>
        <attribute name="clean"/>
      </choice>
    </element>
  </define>
]]>
		</programlisting>
	</sect1>

	<sect1 id="hact_examples">
		<title>Examples</title>
		
		<programlisting><![CDATA[
  <hact ace="compile_hact.ace" system="${system}" finalize="true" fish="true"/>

  <hact clean="${system}"/>
]]>
		</programlisting>
	</sect1>

</chapter>
