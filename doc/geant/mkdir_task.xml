<chapter id="mkdir_task">
	<title>mkdir</title>

	<sect1 id="mkdir_description">
		<title>Description</title>
		<para>
			Create a directory.
		</para>
	</sect1>
	
	<sect1 id="mkdir_parameters">
		<title>Parameters</title>
	
		<variablelist>
			<varlistentry>
				<term>directory</term>
				<listitem>
					<para><emphasis>Description: </emphasis>Directory to be created</para>
				</listitem>
				<listitem>
					<para><emphasis>Domain: </emphasis>Valid directoryname or path</para>
				</listitem>
				<listitem>
					<para><emphasis>Default: </emphasis>-</para>
				</listitem>
			</varlistentry>
		</variablelist>
	</sect1>
	
	<sect1 id="mkdir_specification">
		<title>RNG Specification</title>
		
		<programlisting><![CDATA[
  <define name="mkdir">
    <element name="mkdir">
      <ref name="dir_if_unless"/>
      <attribute name="directory"/>
    </element>
  </define>
]]>
	</programlisting>
	</sect1>
	
	<sect1 id="mkdir_examples">
		<title>Examples</title>
	<programlisting><![CDATA[
  <mkdir directory="out"/>

  <mkdir directory="some/new/directory"/>
]]>
	</programlisting>
	</sect1>

</chapter>
