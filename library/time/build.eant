<?xml version="1.0"?>

<project name="time" default="help">

	<description>
		description: "Eiffel Ant file for the Gobo Eiffel Time Library"
		library:     "Gobo Eiffel Time Library"
		author:      "Eric Bezault [ericb@gobosoft.com]"
		copyright:   "Copyright (c) 2001, Eric Bezault and others"
		license:     "Eiffel Forum Freeware License v1 (see forum.txt)"
		date:        "$Date$"
		revision:    "$Revision$"
	</description>

	<target name="help">
		<echo message="usage:"/>
		<echo message="   geant install"/>
		<echo message="   geant clean"/>
		<echo message="   geant clobber"/>
	</target>

	<target name="install" dir="${GOBO}/library/time">
		<description>
			Install the Gobo Eiffel Time Library.
		</description>
		<!-- do nothing -->
	</target>

	<target name="clean" dir="${GOBO}/library/time">
		<description>
			Remove intermediary generated files.
		</description>

		<ve clean="time" recursive="true"/>
	</target>

	<target name="clobber" dir="${GOBO}/library/time">
		<description>
			Remove all generated files.
		</description>

		<geant target="clean"/>
	</target>

</project>
