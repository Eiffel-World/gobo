<?xml version="1.0"?>

<system name="gelint">
	<description>
		system: "Gobo Eiffel Lint"
		copyright: "Copyright (c) 2001-2002, Eric Bezault and others"
		license: "Eiffel Forum License v1 (see forum.txt)"
		date: "$Date$"
		revision: "$Revision$"
	</description>

	<root class="GELINT" creation="execute"/>
	<option unless="${DEBUG}">
		<option name="assertion" value="none"/>
		<option name="garbage_collector" value="none"/>
		<option name="finalize" value="true" unless="${GOBO_EIFFEL}=ve"/>
	</option>
	<option if="${DEBUG}">
		<option name="assertion" value="all"/>
		<option name="garbage_collector" value="none"/>
		<option name="finalize" value="false"/>
	</option>

	<cluster name="gelint" location="${GOBO}/src/gelint"/>

	<mount location="${GOBO}/library/lexical/library.xace" prefix="lx_"/>
	<mount location="${GOBO}/library/parse/library.xace" prefix="pr_"/>
	<mount location="${GOBO}/library/utility/library.xace" prefix="ut_"/>
	<mount location="${GOBO}/library/kernel/library.xace" prefix="kl_"/>
	<mount location="${GOBO}/library/structure/library.xace" prefix="ds_"/>
	<mount location="${GOBO}/library/tools/library.xace" prefix="et_"/>
	<mount location="${GOBO}/library/pattern/library.xace" prefix="dp_"/>
	<mount location="${GOBO}/library/xml/library.xace" prefix="xm_"/>
	<mount location="${GOBO}/library/kernel.xace"/>
</system>
